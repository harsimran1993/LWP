<resources>

    <style name="GdxTheme" parent="Theme.AppCompat">
		<item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="prefTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/orange</item>
        <item name="android:textColor">#000000</item>
        <item name="alertDialogTheme">@style/AlertDialogCustom</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/orange</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="alertDialogTheme">@style/AlertDialogCustom</item>
        <item name="android:itemTextAppearance">@style/itemTextStyle.AppTheme</item>
	</style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/orange</item>
        <!-- Used for the title and text -->
        <item name="android:textColor">@color/deep_orange</item>
        <item name="android:textColorPrimary">@color/black_light</item>
        <!-- Used for the background -->
        <item name="android:background">@color/white</item>
    </style>

    <style name="itemTextStyle.AppTheme" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
